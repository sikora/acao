[% INCLUDE 'auth/admin/usuario/header_usuario.tt' %]
[% INCLUDE 'errosucesso.tt' %]
<h1 class="titulo-form">Gerenciar Usuário: [% usuario.uid %] |
  <span style="font-size:13px; font-weight:normal;">
       <a class="lotacao_alterar" href="[% c.uri_for_action('/auth/admin/usuario/alterar_lotacao',[ dn_usuario ]) %]">Alterar Lotação</a>
       <a class="alterar_permissoes" href="[% c.uri_for_action('/auth/admin/usuario/alterar_permissoes',[ dn_usuario ]) %]">Alterar Permissões</a>
       <a href="[% c.uri_for_action('/auth/admin/usuario/delete',[ dn_usuario ])%]" class="remover_do_acap" > Retirar do Ação</a>

  </span>
</h1>

<fieldset  class="dadosUsuario">
  <legend>Dados do Usuário</legend>
  <dl>
    <dt>Usuário</dt>
    <dd>  [% usuario.uid %]</dd>
    <dt>Senha:</dt>
    <dd>
        <div class="alterar_senha" ><a href="javascript:void(0)" class="bt_alter_pass alterar_pass"   >Alterar Senha</a></div>
        <div id="alter_pass" class="alter_pass_div"  alt="[% dn_usuario %]">
          <input type="password" class="senha_pass inputsenha" alt="[% c.uri_for_action('/auth/admin/usuario/store_alterar_senha',[ dn_usuario ])%]"  name="senha" />
          <input type="button" class="submit_button" id="submit"   value="ok"/>
        </div>
        <div id="msg"></div>

    </dd>
    <dt>Nome:</dt>
    <dd>  [% usuario.nome %]</dd>
    <dt>Sobrenome:</dt>
    <dd>  [% usuario.sobrenome %]</dd>
    <dt>Apelido:</dt>
    <dd>  [% usuario.apelido %]</dd>
    <dt>Fone:</dt>
    <dd>
      [% FOREACH fone IN usuario.fone %]
        [% fone %]
      [% END %]
    </dd>
    <dt>Celular</dt>
    <dd>
    [% FOREACH celular IN usuario.celular %]
      [% celular %]
    [% END %]
    </dd	>
    <dt>Email:</dt>
    <dd>
    [% FOREACH email IN usuario.email %]
      [% email %]
    [% END %]
    </dd>
    <dt>Super Administrador:</dt>
    <dd>

      [% IF usuario_sistema.admin == '1' %]
        Sim
      [% ELSE %]
        Não
      [% END %]

    </dd>
  </dl>



  <fieldset>
    <legend>Lotação</legend>
    <div>
    <table>
    <thead>
     <tr>
      <th width="20%">Grupo</th>


     </tr>
  </thead>
    <tbody>
       [% FOREACH member IN usuario.memberOf %]
        <tr><td> [% c.model('LDAP').decompose_dn_grupos(member).reverse.join(' - ') %] </td>        </tr>
       [% END %]

    </tbody>
   </table>
   </div>

  </fieldset>

   <fieldset>
    <legend>Autorizações no Sistema</legend>
    <div>
    <table>
    <thead>
     <tr>
      <th width="20%">Grupo</th>


     </tr>
  </thead>
    <tbody>
       [% FOREACH member IN usuario_sistema.memberOf %]
        <tr><td> [% c.model('LDAP').decompose_dn_grupos(member).reverse.join(' - ') %] </td>        </tr>
       [% END %]

    </tbody>
   </table>
   </div>

  </fieldset>





</fieldset>


<script type="text/javascript">

  $("documment").ready(function(){
    $(".alter_pass_div").hide();

    $(".bt_alter_pass").click(function(){
      $(".alterar_senha").hide();
      $("#alter_pass").show('fast');
      $("#msg").html("");
    })

    $(".submit_button").click(function(){

      var new_pass = $(".senha_pass").val();
      var action = $(".senha_pass").attr("alt");
      var dn = $("#alter_pass").attr("alt");


       $.ajax({
             type: "POST",
             url: action,

             data: {
               'new_pass': new_pass,
               'dn'	     : dn,

               },
             beforeSend: function() {
             $("#alter_pass").hide("slow");
             },
             success: function(msg){
               $("#msg").html(msg);

             }

        });

    })
  });


</script>







[% INCLUDE 'footer.tt' %]